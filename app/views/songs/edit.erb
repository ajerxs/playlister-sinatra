<form action="/songs/<%= @song.slug %>" method="post">
    <input id="hidden" type="hidden" name="_method" value="patch">
    <label>Name: </label>
    <input type="text" name="song[name]" id="Name" value="<%= @song.name %>"><br>

    <label>Artist: </label>
    <input type="text" name="song[artist]" id="Artist Name" value="<%= @song.artist.name %>"><br>

    <label>Genres: </label>
    <% @genres.each do |genre| %>
        <input id="<%= genre.name %>" type="checkbox" name="song[genres][]" value="<%= genre.id %>" ><br>
    <% end %> 
    <br>
    <br>
    <input type="submit" value="Save">
</form>